---

<section id="testimonials" class="relative bg-black overflow-hidden py-16 md:py-24">
  <div class="max-w-7xl mx-auto px-4 md:px-6 lg:px-8">
    <div class="grid lg:grid-cols-[1fr_1.2fr] gap-12 lg:gap-16">
      <!-- Left Side - Sticky Content -->
      <div class="lg:sticky lg:top-24 lg:h-fit space-y-8">
        <!-- Header -->
        <div>
          <div class="inline-flex items-center px-4 py-2 md:px-6 md:py-3 text-xs sm:text-sm font-medium rounded-full border bg-yellow-500/10 text-yellow-300 border-yellow-500/20 backdrop-blur-sm mb-6">
            <svg class="w-3 h-3 sm:w-4 sm:h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
            </svg>
            Proven Success
          </div>

          <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-extralight text-white leading-tight tracking-tight mb-6">
            Case Studies
          </h2>

          <p class="text-base sm:text-lg text-gray-300 leading-relaxed font-light">
            Explore our case studies to see how we've helped clients overcome challenges and achieve remarkable
            results through effective strategies.
          </p>
        </div>

        <!-- Metrics Grid -->
        <div class="grid grid-cols-2 gap-4">
          {metrics.map((metric, index) => (
            <div class="bg-neutral-900/50 border-neutral-800/70 backdrop-blur-sm hover:border-yellow-500/60 transition-all duration-300 group p-1 rounded-xl shadow-lg hover:shadow-yellow-500/10">
              <div class="bg-neutral-900 rounded-lg h-full transition-all duration-300 group-hover:bg-neutral-800/60 p-6">
                <svg class="w-6 h-6 text-yellow-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={metric.icon}></path>
                </svg>
                <h3 class="text-xl sm:text-2xl font-medium text-white leading-tight mb-2">{metric.title}</h3>
                <p class="text-sm sm:text-base text-gray-400 leading-relaxed font-light">{metric.value}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Right Side - Case Studies -->
      <div class="space-y-8">
        {caseStudies.map((study, index) => (
          <div class="cursor-pointer relative z-10 hover:z-50 group">
            <div class="bg-neutral-900/50 border-neutral-800/70 overflow-hidden hover:border-blue-500/60 transition-all duration-300 backdrop-blur-sm p-1 rounded-xl shadow-lg hover:shadow-blue-500/10">
              <div class="bg-neutral-900 rounded-lg overflow-hidden transition-all duration-300 group-hover:bg-neutral-800/60">
                <!-- Image Container -->
                <div class="relative aspect-video overflow-hidden">
                  <img
                    src={study.image || "/placeholder.svg"}
                    alt={study.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>

                  <!-- Hover Overlay -->
                  <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
                    <div class="bg-blue-500 text-white px-6 py-3 rounded-full font-medium flex items-center gap-2 transform scale-90 group-hover:scale-100 transition-transform">
                      View Project
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                      </svg>
                    </div>
                  </div>
                </div>

                <!-- Content -->
                <div class="p-6">
                  <div class="flex flex-wrap items-center gap-3 mb-4">
                    <span class="inline-flex items-center px-3 py-1 text-xs font-medium rounded-full border bg-white/10 text-white border-white/20">
                      {study.date}
                    </span>
                    <span class="inline-flex items-center px-3 py-1 text-xs font-medium rounded-full border bg-blue-500/10 text-blue-300 border-blue-500/20">
                      {study.category}
                    </span>
                  </div>

                  <h3 class="text-xl sm:text-2xl font-medium text-white leading-tight mb-3 group-hover:text-blue-400 transition-colors duration-300">
                    {study.title}
                  </h3>

                  <p class="text-sm sm:text-base text-gray-400 leading-relaxed font-light">{study.description}</p>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
