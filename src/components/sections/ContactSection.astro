          </div>
        </div>
      </div>
    </div>

    <!-- Trust Indicators - Mobile First -->
    <div class="text-center animate-fade-in-up animation-delay-1000">
      <div class="grid sm:grid-cols-3 gap-4 sm:gap-6 md:gap-8 max-w-4xl mx-auto">
        {trustIndicators.map((indicator, index) => (
          <div class="flex flex-col sm:flex-row items-center justify-center gap-2 sm:gap-3 p-3 sm:p-4 bg-neutral-900/30 border border-neutral-800/50 rounded-lg sm:rounded-xl backdrop-blur-sm hover:border-rose-500/30 transition-all duration-300" style={`animation-delay: ${1.2 + index * 0.1}s`}>
