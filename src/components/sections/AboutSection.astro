---
import Badge from '../ui/Badge.astro';

const values = [
  {
    title: "Innovación Constante",
    description: "Siempre un paso adelante en tecnología y estrategias digitales que transforman industrias.",
    icon: "M13 10V3L4 14h7v7l9-11h-7z",
    gradient: "from-blue-500/20 to-cyan-500/20",
    borderColor: "border-blue-500/30 group-hover:border-blue-400/70",
    iconColor: "text-blue-400 group-hover:text-blue-300"
  },
  {
    title: "Resultados Medibles",
    description: "Cada estrategia está diseñada con métricas claras y KPIs que garantizan el éxito.",
    icon: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z",
    gradient: "from-emerald-500/20 to-green-500/20",
    borderColor: "border-emerald-500/30 group-hover:border-emerald-400/70",
    iconColor: "text-emerald-400 group-hover:text-emerald-300"
  },
  {
    title: "Equipo Experto",
    description: "Profesionales apasionados con años de experiencia comprobada en el mercado digital.",
    icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z",
    gradient: "from-purple-500/20 to-pink-500/20",
    borderColor: "border-purple-500/30 group-hover:border-purple-400/70",
    iconColor: "text-purple-400 group-hover:text-purple-300"
  },
];

const stats = [
  { number: "3+", label: "Años de Experiencia", icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" },
  { number: "100%", label: "Estrategia Personalizadas", icon: "M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" },
  { number: "90%", label: "Satisfacción Cliente", icon: "M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" },
  { number: "25+", label: "Industrias Atendidas", icon: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" }
];
---

<section class="relative overflow-hidden w-full">
  
  <!-- Background Elements - Mobile First -->
  <div class="absolute inset-0 pointer-events-none">
    <!-- Animated Gradient Orbs - Scaled for Mobile -->
    <div class="absolute top-1/4 left-1/4 w-48 h-48 sm:w-64 sm:h-64 lg:w-96 lg:h-96 bg-gradient-to-r from-green-500/15 to-emerald-500/25 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-1/4 right-1/4 w-48 h-48 sm:w-64 sm:h-64 lg:w-96 lg:h-96 bg-gradient-to-r from-cyan-500/20 to-blue-500/20 rounded-full blur-3xl animate-float-delayed"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-32 h-32 sm:w-48 sm:h-48 lg:w-72 lg:h-72 bg-gradient-to-r from-emerald-500/10 to-green-500/20 rounded-full blur-3xl animate-pulse-slow"></div>
    
    <!-- Additional floating elements - Hidden on small screens -->
    <div class="hidden sm:block absolute top-1/3 right-1/5 w-32 h-32 md:w-64 md:h-64 bg-gradient-to-r from-teal-500/10 to-cyan-500/15 rounded-full blur-2xl animate-float-slow"></div>
    <div class="hidden sm:block absolute bottom-1/3 left-1/5 w-24 h-24 md:w-48 md:h-48 bg-gradient-to-r from-green-400/15 to-emerald-400/20 rounded-full blur-2xl animate-bounce-slow"></div> 
  </div>

  <div class="w-full md:max-w-2xl lg:max-w-6xl mx-auto px-6 lg:px-8 py-16 sm:py-20 md:py-24 lg:py-32 z-[1] relative">
    <!-- Header - Mobile First -->
    <div class="text-center mb-12 sm:mb-16 md:mb-20 lg:mb-24 animate-fade-in-up">
      <div class="mb-4 sm:mb-6">
        <Badge>
          Sobre Nosotros
        </Badge>
      </div>
      
      <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-extralight text-white leading-tight tracking-tight mb-4 sm:mb-6 md:mb-8 animate-fade-in-up animation-delay-200">
        Somos <span class="bg-gradient-to-r from-green-400 via-emerald-400 to-cyan-400 bg-clip-text text-transparent font-medium animate-gradient-x">Visionarios Digitales</span>
      </h2>

      <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-gray-300 max-w-xs sm:max-w-lg md:max-w-2xl lg:max-w-4xl mx-auto leading-relaxed font-light animate-fade-in-up animation-delay-400 px-2 sm:px-0">
        Impulsamos estudios de arquitectura y diseño a convertir su talento en marcas sólidas que dominan su nicho, atrayendo clientes ideales con estrategias digitales efectivas.
      </p>
    </div>

    <!-- Stats Section - Mobile First Grid -->
    <div class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 md:gap-8 mb-16 sm:mb-20 md:mb-24 lg:mb-32 animate-fade-in-up animation-delay-600">
      {stats.map((stat, index) => (
        <div class="bg-neutral-900/60 border border-neutral-800/70 backdrop-blur-sm rounded-xl sm:rounded-2xl p-4 sm:p-6 text-center hover:border-green-500/30 hover:bg-neutral-800/60 transition-all duration-300 group hover:scale-105 hover:-translate-y-1" style={`animation-delay: ${0.8 + index * 0.1}s`}>
          <div class="w-10 h-10 sm:w-12 sm:h-12 bg-gradient-to-br from-green-500/20 to-emerald-500/20 rounded-lg sm:rounded-xl mx-auto mb-3 sm:mb-4 flex items-center justify-center border border-green-500/30 group-hover:border-green-400/50 transition-all duration-300">
            <svg class="w-5 h-5 sm:w-6 sm:h-6 text-green-400 group-hover:text-green-300 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={stat.icon}></path>
            </svg>
          </div>
          <div class="text-2xl sm:text-3xl md:text-4xl font-light text-white mb-1 sm:mb-2 group-hover:text-green-400 transition-colors duration-300">
            {stat.number}
          </div>
          <div class="text-xs sm:text-sm text-gray-400 uppercase tracking-wider font-medium leading-tight">
            {stat.label}
          </div>
        </div>
      ))}
    </div>

    <!-- Content Grid - Mobile First Layout -->
    <div class="grid lg:grid-cols-2 gap-12 sm:gap-16 md:gap-20 items-center mb-16 sm:mb-20 md:mb-24 lg:mb-32">
      <!-- Left Content -->
      <div class="space-y-6 sm:space-y-8 md:space-y-10 animate-fade-in-up animation-delay-800">
        <div>
          <h3 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-light text-white leading-tight mb-4 sm:mb-6 md:mb-8">
            Nuestra <span class="text-green-400">Misión</span>
          </h3>
          <div class="space-y-4 sm:space-y-6">
            <p class="text-base sm:text-lg md:text-xl text-gray-300 leading-relaxed font-light">
                Impulsamos el crecimiento de estudios creativos, transformando el talento en un negocio <strong class="text-white font-bold">rentable y escalable</strong>. Lo hacemos a través de estrategias digitales personalizadas que atraen <strong class="text-white font-bold">clientes reales</strong>, alineados con el valor que ofrecés.
            </p>
            <p class="text-base sm:text-lg md:text-xl text-gray-300 leading-relaxed font-light">
              Creemos en un modelo de <strong class="text-white font-bold">éxito compartido: crecemos juntos</strong>, solo si también confías en el proceso. 
            </p>
          </div>
        </div>

        <div class="flex flex-col sm:flex-row gap-4 max-w-fit mx-auto sm:mx-0">
          <a
            href="https://calendly.com/morealtamiranda/call-morena-altamiranda"
            class="inline-flex items-center bg-gradient-to-r from-green-500 to-emerald-500 text-white hover:from-green-600 hover:to-emerald-600 px-6 sm:px-8 py-3 text-sm sm:text-base font-medium rounded-full shadow-lg hover:shadow-green-500/25 transition-all duration-300 hover:-translate-y-1 justify-center sm:justify-start"
          >
            Conoce Más
          </a>
        </div>
      </div>

      <!-- Right Content - Mission Card -->
      <div class="bg-gradient-to-br from-neutral-900/80 to-neutral-800/80 border border-neutral-700/50 backdrop-blur-sm rounded-2xl sm:rounded-3xl p-6 sm:p-8 md:p-10 shadow-2xl hover:shadow-green-500/10 transition-all duration-300 animate-fade-in-up animation-delay-1000">
        <div class="text-center space-y-4 md:space-y-6">
          <div class="w-16 h-16 sm:w-20 sm:h-20 bg-gradient-to-br from-green-500 to-emerald-600 rounded-xl sm:rounded-2xl mx-auto flex items-center justify-center shadow-xl">
            <svg class="w-8 h-8 sm:w-10 sm:h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
            </svg>
          </div>
          <div>
            <h4 class="text-xl sm:text-2xl md:text-3xl lg:text-4xl font-light text-white leading-tight mb-3 sm:mb-4 md:mb-6">
              Nuestra <span class="text-green-400">Visión</span>
            </h4>
            <p class="text-base sm:text-lg md:text-lg text-gray-300 leading-relaxed font-light mb-4">
                Redefinir cómo los profesionales creativos <strong class="text-white font-bold">atraen clientes</strong> y <strong class="text-white font-bold">hacen crecer sus negocios</strong>, construyendo una red de estudios independientes que no solo sean <strong class="text-white font-bold">prósperos y sostenibles</strong>, sino también <strong class="text-white font-bold">reconocidos por el valor único que ofrecen</strong>.
            </p>
            <p class="text-base sm:text-lg md:text-xl text-gray-300 leading-relaxed font-light">
              Porque el talento no debería ser invisible: <strong class="text-green-400">merece ser visto, valorado y elegido.</strong>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Values Section - Mobile First -->
    <div class="animate-fade-in-up animation-delay-1200">
      <div class="text-center mb-8 sm:mb-12 md:mb-16">
        <h3 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-light text-white leading-tight mb-3 sm:mb-4">
          Nuestros <span class="text-green-400">Valores Fundamentales</span>
        </h3>
        <p class="text-sm sm:text-base md:text-lg text-gray-400 max-w-xs sm:max-w-lg md:max-w-2xl mx-auto px-2 sm:px-0">
          Los principios que guían cada decisión y proyecto que emprendemos
        </p>
      </div>
      
      <!-- Values Grid - Mobile First -->
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 md:gap-10">
        {values.map((value, index) => (
          <div class="bg-neutral-900/60 border border-neutral-800/70 backdrop-blur-sm hover:border-opacity-100 transition-all duration-500 group rounded-2xl sm:rounded-3xl p-4 sm:p-6 md:p-8 text-center hover:-translate-y-2 shadow-lg hover:shadow-2xl" style={`animation-delay: ${1.4 + index * 0.2}s; border-color: ${value.borderColor.split(' ')[0].replace('border-', '')}`}>
            <div class={`mb-4 inline-flex items-center justify-center p-3 sm:p-4 rounded-xl sm:rounded-2xl bg-gradient-to-br ${value.gradient} border ${value.borderColor} transition-all duration-300`}>
              <svg class={`w-6 h-6 sm:w-8 sm:h-8 ${value.iconColor} transition-colors duration-300`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={value.icon}></path>
              </svg>
            </div>
            <h4 class="text-lg sm:text-xl md:text-2xl lg:text-3xl font-medium text-white leading-tight mb-3 sm:mb-4 group-hover:text-green-400 transition-colors duration-300">
              {value.title}
            </h4>
            <p class="text-sm sm:text-base md:text-lg text-gray-400 leading-relaxed font-light group-hover:text-gray-300 transition-colors duration-300">
              {value.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes float {
    0%, 100% { 
      transform: translateY(0px) rotate(0deg); 
    }
    50% { 
      transform: translateY(-15px) rotate(180deg); 
    }
  }

  @keyframes float-delayed {
    0%, 100% { 
      transform: translateY(0px) rotate(0deg); 
    }
    50% { 
      transform: translateY(-20px) rotate(-180deg); 
    }
  }

  @keyframes pulse-slow {
    0%, 100% { 
      opacity: 0.15; 
      transform: scale(1);
    }
    50% { 
      opacity: 0.25; 
      transform: scale(1.05);
    }
  }

  @keyframes float-slow {
    0%, 100% { 
      transform: translateY(0px); 
    }
    50% { 
      transform: translateY(-10px); 
    }
  }

  @keyframes bounce-slow {
    0%, 100% { 
      transform: translateY(0); 
    }
    50% { 
      transform: translateY(-8px); 
    }
  }

  @keyframes gradient-x {
    0%, 100% { 
      background-position: 0% 50%; 
    }
    50% { 
      background-position: 100% 50%; 
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-delayed 8s ease-in-out infinite;
  }

  .animate-pulse-slow {
    animation: pulse-slow 4s ease-in-out infinite;
  }

  .animate-float-slow {
    animation: float-slow 5s ease-in-out infinite;
  }

  .animate-bounce-slow {
    animation: bounce-slow 3s ease-in-out infinite;
  }

  .animate-gradient-x {
    background-size: 200% 200%;
    animation: gradient-x 3s ease infinite;
  }

  /* Animation delays with mobile-first opacity */
  .animation-delay-200 {
    animation-delay: 0.2s;
    opacity: 0;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
    opacity: 0;
  }

  .animation-delay-600 {
    animation-delay: 0.6s;
    opacity: 0;
  }

  .animation-delay-800 {
    animation-delay: 0.8s;
    opacity: 0;
  }

  .animation-delay-1000 {
    animation-delay: 1s;
    opacity: 0;
  }

  .animation-delay-1200 {
    animation-delay: 1.2s;
    opacity: 0;
  }

  /* Mobile optimizations */
  @media (max-width: 640px) {
    .animate-float,
    .animate-float-delayed,
    .animate-pulse-slow,
    .animate-float-slow,
    .animate-bounce-slow {
      animation-duration: 4s;
    }
  }

  /* Reduce motion for accessibility */
  @media (prefers-reduced-motion: reduce) {
    .animate-fade-in-up,
    .animate-float,
    .animate-float-delayed,
    .animate-pulse-slow,
    .animate-float-slow,
    .animate-bounce-slow,
    .animate-gradient-x {
      animation: none;
    }
    
    .animation-delay-200,
    .animation-delay-400,
    .animation-delay-600,
    .animation-delay-800,
    .animation-delay-1000,
    .animation-delay-1200 {
      opacity: 1;
    }
  }
</style>